{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./packages",
    "paths": {
      "HostConfig": ["./react-dom/src/client/ReactDOMHostConfig.ts"]
    }
  },
  "include": ["./packages/**/*", "./scripts/**/*"]
}
